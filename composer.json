{
    "type": "yawik-module",
    "name": "stellenmarkt/karriere24",
    "description": "This module provides the layout and special functionality for the karriere24 yawik instance",
    "license": "MIT",
    "authors": [
        {
            "name": "Carsten Bleek",
            "email": "bleek@cross-solution.de"
        },
        {
            "name": "Mathias Gelhausen",
            "email": "gelhausen@cross-solution.de"
        },
        {
            "name": "Michael Ott"
        }
    ],
    "keywords": [
        "yawik", "module", "zf3", "karriere24"
    ],
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/yawik/SimpleImport.git"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "yawik/core": "^0.33.14",
        "yawik/composer-plugin": "^1.0",
        "yawik/auth": "^0.33",
        "yawik/jobs": "^0.33",
        "yawik/settings": "^0.33",
        "yawik/applications": "^0.33",
        "yawik/cv": "^0.33",
        "yawik/solr": "^0.6",
        "yawik/organizations": "^0.33",
    	"yawik/geo": "^1.1",
        "yawik/simple-import": "dev-upgrade-geocoder"
    },
    "require-dev": {
        "yawik/behat": "^0.33"
    },
    "autoload": {
        "psr-4": { "Karriere24\\": "src/"}
    },
    "autoload-dev": {
        "psr-0": {
            "Karriere24Test\\": "test/"
        }
    },
    "extra": {
        "zf": {
            "module": "Karriere24"
        }
    },
    "scripts": {
        "auto-scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve": "php -S localhost:8000 -t test/sandbox/public",
        "start-selenium": "./vendor/bin/selenium-server-standalone -p 4444 -Dwebdriver.chrome.driver=./vendor/bin/chromedriver",
        "test": "phpunit"
    }
}
